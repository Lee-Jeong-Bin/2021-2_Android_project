<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout tools:context=".MainActivity"
    android:background="#F7D754"
    android:orientation="vertical"
    android:weightSum="14"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--뒤로가기 버튼과 상단 빈공간-->

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_height="25dp"
        android:layout_width="match_parent"
        android:layout_weight="0.5">

    <ImageButton
        android:layout_height="match_parent"
        android:layout_width="39dp"
        android:layout_weight="0.1"
        android:background="@drawable/escape_icon"
        android:layout_gravity="left"
        android:id="@+id/imageView4"/>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="375dp"
        android:layout_weight="0">
    </TextView>

</LinearLayout>

<!--참가자 프로필 사진들-->
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_height="95dp"
        android:layout_width="match_parent"
        android:layout_weight="0.5">

    <TextView
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2.5">
    </TextView>

    <ImageView
        android:background="@drawable/roundprofile"
        android:layout_height="95dp"
        android:layout_width="95dp"
        android:layout_gravity="center"
        android:id="@+id/profile1"
        android:scaleType="centerCrop">
    </ImageView>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5">
    </TextView>

    <ImageView
        android:background="@drawable/roundprofile"
        android:layout_height="95dp"
        android:layout_width="95dp"
        android:layout_gravity="center"
        android:id="@+id/profile2"
        android:scaleType="centerCrop">
    </ImageView>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"/>

    <ImageView
        android:background="@drawable/roundprofile"
        android:layout_height="95dp"
        android:layout_width="95dp"
        android:layout_gravity="center"
        android:id="@+id/profile3"
        android:scaleType="centerCrop">
    </ImageView>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"/>

    <ImageView
        android:background="@drawable/roundprofile"
        android:layout_height="95dp"
        android:layout_width="95dp"
        android:layout_gravity="center"
        android:id="@+id/profile4"
        android:scaleType="centerCrop">
    </ImageView>

</LinearLayout>

    <!--별점과 취소율표시-->

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_height="75dp"
        android:layout_width="match_parent"
        android:layout_weight="0.5">

    <TextView
        android:layout_height="match_parent"
        android:layout_width="14dp">
    </TextView>


    <LinearLayout
        android:orientation="vertical"
        android:weightSum="3.5"
        android:layout_height="80dp"
        android:layout_width="95dp">

    <TextView
        android:layout_height="20dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:id="@+id/stars1"
        android:autoSizeTextType="uniform"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="nn점/5점"
        android:fontFamily="@font/title"/>

    <TextView
        android:layout_height="20dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center|top"
        android:id="@+id/cancle_percentage1"
        android:autoSizeTextType="uniform"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="nn.n%"
        android:fontFamily="@font/title" />
</LinearLayout>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="2dp">
    </TextView>


    <LinearLayout
        android:orientation="vertical"
        android:weightSum="3.5"
        android:layout_height="80dp"
        android:layout_width="95dp">

    <TextView
        android:layout_height="20dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:id="@+id/stars2"
        android:autoSizeTextType="uniform"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="nn점/5점"
        android:fontFamily="@font/title"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center|top"
        android:id="@+id/cancle_percentage2"
        android:autoSizeTextType="uniform"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="nn.n%"
        android:fontFamily="@font/title" />

</LinearLayout>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="2dp">
    </TextView>


    <LinearLayout
        android:orientation="vertical"
        android:weightSum="3.5"
        android:layout_height="80dp"
        android:layout_width="95dp">

        <TextView
            android:id="@+id/stars3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center|bottom"
            android:layout_weight="1"
            android:fontFamily="@font/title"
            android:text="nn점/5점"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform" />

        <TextView
        android:layout_height="20dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
            android:gravity="center|top"
        android:id="@+id/cancle_percentage3"
            android:autoSizeTextType="uniform"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="nn.n%"
        android:fontFamily="@font/title"
        />
</LinearLayout>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="2dp">
    </TextView>


    <LinearLayout android:orientation="vertical"
        android:weightSum="3.5"
        android:layout_height="80dp"
        android:layout_width="95dp">

    <TextView
        android:layout_height="20dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:id="@+id/stars4"
        android:autoSizeTextType="uniform"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="nn점/5점"
        android:fontFamily="@font/title"/>

    <TextView
        android:layout_height="20dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center|top"
        android:id="@+id/cancle_percentage4"
        android:autoSizeTextType="uniform"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="nn.n%"
        android:fontFamily="@font/title" />

</LinearLayout>

</LinearLayout>

    <!--출발날짜 와 시간-->


    <TextView
        android:background="@drawable/introduction"
        android:layout_height="3dp"
        android:layout_width="390dp"
        android:layout_weight="0.3"
        android:layout_gravity="center"> </TextView>


    <LinearLayout android:orientation="horizontal"
        android:weightSum="6"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:layout_weight="0.5">

    <TextView
        android:layout_height="match_parent"
        android:layout_width="13dp">
    </TextView>


    <LinearLayout
        android:orientation="vertical"
        android:weightSum="3.5"
        android:layout_height="80dp"
        android:layout_width="95dp"
        android:layout_gravity="center">

    <TextView
        android:layout_height="10dp"
        android:layout_width="match_parent">
    </TextView>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="출발 날짜"
        android:fontFamily="@font/title"> </TextView>

    <TextView
        android:layout_height="10dp"
        android:layout_width="match_parent">
    </TextView>

    <TextView
        android:layout_height="20dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="출발 시간"
        android:fontFamily="@font/title"
        android:gravity="center"> </TextView>

    <TextView
        android:layout_height="10dp"
        android:layout_width="match_parent"> </TextView>

</LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:layout_weight="0.5">

    <TextView
        android:layout_height="match_parent"
        android:layout_width="25dp"> </TextView>


    <LinearLayout
        android:orientation="vertical"
        android:weightSum="3.5"
        android:layout_height="match_parent"
        android:layout_width="275dp"
        android:layout_gravity="center">

    <TextView
        android:layout_height="10dp"
        android:layout_width="match_parent"> </TextView>

    <TextView
        android:layout_height="25dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:id="@+id/date"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="YYYY년 M월 DD일"
        android:fontFamily="@font/title"> </TextView>

    <TextView
        android:layout_height="10dp"
        android:layout_width="match_parent"/>

    <TextView
        android:layout_height="20dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:id="@+id/time"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="TT시 MM분"
        android:fontFamily="@font/title"
        android:gravity="center"> </TextView>

    <TextView
        android:layout_height="10dp"
        android:layout_width="match_parent"> </TextView>

</LinearLayout>

</LinearLayout>

</LinearLayout>

    <TextView
        android:background="@drawable/introduction"
        android:layout_height="3dp"
        android:layout_width="390dp"
        android:layout_weight="0.2"
        android:layout_gravity="center"> </TextView>

    <!--지도가 들어가는 자리!-->


    <TextView
        android:layout_height="9dp"
        android:layout_width="match_parent"> </TextView>

    <com.skt.Tmap.TMapView
        android:id="@+id/map_par"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_height="200dp"
        android:layout_width="390dp"
        android:layout_gravity="center">
    </com.skt.Tmap.TMapView>

    <TextView
        android:layout_height="20dp"
        android:layout_width="match_parent"> </TextView>

    <!--방 소갯말(제목)-->


    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:layout_weight="3">

    <TextView
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"> </TextView>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"> </TextView>

    <TextView
        android:background="@drawable/introduction"
        android:layout_height="match_parent"
        android:layout_width="380dp"
        android:gravity="center"
        android:id="@+id/introduction"
        android:scaleType="centerCrop"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="\n 선문대에서 아산역 같이 갈 사람 구함 \nㄴㅇㄱ"
        android:fontFamily="@font/title"/>

</LinearLayout>
    <TextView
        android:layout_height="9dp"
        android:layout_width="match_parent"> </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"></TextView>

        <TextView
            android:id="@+id/join_button"
            android:layout_width="380dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/estimateshape"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/title"
            android:scaleType="centerCrop"
            android:gravity="center"
            android:text="참가하기"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:clickable="true"/>

    </LinearLayout>
</LinearLayout>